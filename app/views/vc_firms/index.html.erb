<div class="wrapper">
<div class="container">
  <div class="row">
    <% @vc_firms.each do |vc_firm| %>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div class="card" style="background-color: #114357">
        <div class="card-category"><%= vc_firm.category %></div>
        <div class="card-description">
          <h2><%= vc_firm.name %></h2>
          <p><%if vc_firm.seed_stage%>Seed stage <% end %><%if vc_firm.series_a%>Series A <% end %> <%if vc_firm.series_b%>Series B <% end %><%if vc_firm.series_c%>Series C <% end %><%if vc_firm.growth_stage%>Growth stage<% end %></p>
        </div>
        <%= cl_image_tag vc_firm.logo, class: "card-user avatar-large"%>
        <%= link_to "", vc_firm_path(vc_firm), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
